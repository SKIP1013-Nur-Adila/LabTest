package Tset;

import java.util.Scanner;

public class CircleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner input = new Scanner(System.in);
		
		/*
		System.out.println("Radius of a circle");
		//float UserRad = input.nextFloat();
		double UserRad = input.nextDouble();
		*/
		
		double diameter, circumference, area, radius;
		
		System.out.print("Enter the radius ");
		radius = input.nextDouble();
		
		diameter = 2.0 * radius;
		
		System.out.println("The diameter of circle is: " + diameter);
		
		area = Math.PI * radius * radius;
		
		System.out.printf("The area of circle is: %.2f" , area);
		System.out.println();
		
		circumference = 2.0 * Math.PI * radius;
		
		System.out.printf("The circumference of the circle is: %.2f" , circumference);
		
	}

}
